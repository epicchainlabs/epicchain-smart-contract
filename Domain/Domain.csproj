<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
  </PropertyGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Message Text="Start NeoContract converter, Source File: $(TargetPath)" Importance="high">
    </Message>
    <Exec Command="neon -f &quot;$(TargetPath)&quot; -o" />
  </Target>

  <ItemGroup>
    <Reference Include="EpicChainSmartContract.Framework">
      <HintPath>EpicChainSmartContract.Framework.dll</HintPath>
    </Reference>
  </ItemGroup>

</Project>
